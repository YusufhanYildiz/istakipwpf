<UserControl x:Class="IsTakipWpf.Views.JobListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="İş Takibi" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <StackPanel>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox materialDesign:HintAssist.Hint="İş Başlığı veya Açıklama Ara..." 
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,16,0"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="1" materialDesign:HintAssist.Hint="Müşteri"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="FullName"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="2" materialDesign:HintAssist.Hint="İl"
                              ItemsSource="{Binding Cities}"
                              SelectedItem="{Binding SelectedCityFilter}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="3" materialDesign:HintAssist.Hint="İlçe"
                              ItemsSource="{Binding Districts}"
                              SelectedItem="{Binding SelectedDistrictFilter}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="4" materialDesign:HintAssist.Hint="Durum"
                              ItemsSource="{Binding Statuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,16,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <Button Grid.Column="5" Content="YENİ İŞ" 
                            Command="{Binding AddJobCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Command="{Binding ImportExcelCommand}" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Margin="0,0,8,0"
                            ToolTip="Excel dosyasındaki işleri sisteme aktarır">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileImport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="EXCEL İÇE AKTAR" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ExportExcelCommand}" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Margin="0,0,8,0"
                            ToolTip="İş listesini Excel dosyası olarak kaydeder">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="EXCEL ÇIKTI" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ExportPdfCommand}" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            ToolTip="İş listesini PDF raporu olarak hazırlar">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="PDF RAPORU" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <DataGrid ItemsSource="{Binding Jobs}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="All"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Müşteri" Binding="{Binding CustomerFullName}" Width="Auto"/>
                    <DataGridTextColumn Header="İl" Binding="{Binding CustomerCity}" Width="Auto"/>
                    <DataGridTextColumn Header="İlçe" Binding="{Binding CustomerDistrict}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Durum" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,2" CornerRadius="4" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Bekliyor">
                                                    <Setter Property="Background" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="DevamEdiyor">
                                                    <Setter Property="Background" Value="LightBlue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Tamamlandi">
                                                    <Setter Property="Background" Value="LightGreen"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status, Converter={StaticResource EnumToDescriptionConverter}}" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="İş Başlığı" Binding="{Binding JobTitle}" Width="Auto"/>
                    <DataGridTextColumn Header="Açıklama" Binding="{Binding Description}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="MaxHeight" Value="40"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Başlangıç" Binding="{Binding StartDate, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                    <DataGridTextColumn Header="Bitiş" Binding="{Binding EndDate, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                    <DataGridTemplateColumn Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.EditJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Düzenle"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Pencil" Height="16" Width="16"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.DeleteJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Sil"
                                            Foreground="{DynamicResource ErrorBrush}"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Delete" Height="16" Width="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</UserControl>