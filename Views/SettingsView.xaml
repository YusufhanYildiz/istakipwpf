<UserControl x:Class="IsTakipWpf.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:infra="clr-namespace:IsTakipWpf.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <UserControl.Resources>
        <infra:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <infra:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <infra:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ayarlar &amp; Yedekleme" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Uygulama Güncelleme" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Mevcut Sürüm: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding CurrentVersion}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Durum: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding UpdateStatus}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="GÜNCELLEMELERİ DENETLE" 
                                    Command="{Binding CheckForUpdatesCommand}"
                                    IsEnabled="{Binding IsUpdateChecking, Converter={StaticResource InverseBooleanConverter}}"
                                    Margin="0,0,8,0"/>

                            <Button Content="İNDİR" 
                                    Command="{Binding DownloadUpdateCommand}"
                                    Visibility="{Binding CanDownloadUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Margin="0,0,8,0"/>

                            <Button Content="YÜKLE VE YENİDEN BAŞLAT" 
                                    Command="{Binding ApplyUpdateCommand}"
                                    Visibility="{Binding CanRestartToUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                        
                        <ProgressBar IsIndeterminate="True" 
                                     Margin="0,16,0,0"
                                     Visibility="{Binding IsUpdateChecking, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <ProgressBar IsIndeterminate="True" 
                                     Margin="0,16,0,0"
                                     Visibility="{Binding IsUpdateDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Görünüm Ayarları" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        <ComboBox materialDesign:HintAssist.Hint="Tema"
                                  ItemsSource="{Binding Themes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  Width="200"
                                  HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Yedekleme Ayarları" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox materialDesign:HintAssist.Hint="Yedekleme Klasörü" 
                                     Text="{Binding BackupFolder}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="..." Command="{Binding SelectFolderCommand}" Margin="8,0,0,0"/>
                        </Grid>

                        <ToggleButton Content="Çıkışta otomatik yedekleme yap" 
                                      IsChecked="{Binding AutoBackupOnExit}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      HorizontalAlignment="Left"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Yedekleme Geçmişi" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            <Button Grid.Column="1" Content="ŞİMDİ YEDEKLE" Command="{Binding CreateManualBackupCommand}"/>
                        </Grid>

                        <DataGrid ItemsSource="{Binding BackupHistory}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tarih" Binding="{Binding BackupDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="Auto"/>
                                <DataGridTextColumn Header="Dosya Yolu" Binding="{Binding FilePath}" Width="*"/>
                                <DataGridTemplateColumn Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="GERİ YÜKLE" 
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Command="{Binding DataContext.RestoreBackupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>