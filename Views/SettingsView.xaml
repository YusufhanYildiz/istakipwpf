<UserControl x:Class="IsTakipWpf.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:infra="clr-namespace:IsTakipWpf.Infrastructure"
             xmlns:viewmodels="clr-namespace:IsTakipWpf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}">
    <UserControl.Resources>
        <infra:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <infra:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <infra:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
        <infra:DaysToBrushConverter x:Key="DaysToBrushConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ayarlar &amp; Yedekleme" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Hesap Ayarları Kartı -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp0">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" RenderingBias="Quality" ShadowDepth="1.5" Opacity="0.15"/>
                    </materialDesign:Card.Effect>
                    <StackPanel>
                        <TextBlock Text="Hesap Ayarları" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="Account" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.7"/>
                            <TextBlock Text="Mevcut Kullanıcı Adı: " FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentUsername}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox materialDesign:HintAssist.Hint="Yeni Kullanıcı Adı" 
                                     Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                            <Button Grid.Column="1" Content="DEĞİŞTİR" Command="{Binding ChangeUsernameCommand}" Margin="8,0,0,0"/>
                        </Grid>

                        <Separator Margin="0,16" Style="{StaticResource MaterialDesignLightSeparator}"/>
                        
                        <TextBlock Text="Şifre Değiştir" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
                        <PasswordBox materialDesign:HintAssist.Hint="Mevcut Şifre" 
                                     x:Name="CurrentPasswordBox"
                                     materialDesign:PasswordBoxAssist.Password="{Binding CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Margin="0,0,0,8"/>
                        <PasswordBox materialDesign:HintAssist.Hint="Yeni Şifre" 
                                     x:Name="NewPasswordBox"
                                     materialDesign:PasswordBoxAssist.Password="{Binding NewPasswordProp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Margin="0,0,0,8"/>
                        <PasswordBox materialDesign:HintAssist.Hint="Yeni Şifre (Tekrar)" 
                                     x:Name="ConfirmPasswordBox"
                                     materialDesign:PasswordBoxAssist.Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Margin="0,0,0,16"/>
                        
                        <Button Content="ŞİFREYİ GÜNCELLE" 
                                Command="{Binding ChangePasswordCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                HorizontalAlignment="Right"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Lisans Bilgileri Kartı -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp0">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" RenderingBias="Quality" ShadowDepth="1.5" Opacity="0.15"/>
                    </materialDesign:Card.Effect>
                    <StackPanel>
                        <TextBlock Text="Lisans Bilgileri" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        
                        <!-- HWID Tasarımı -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Fingerprint" Margin="0,0,8,0" Opacity="0.7" VerticalAlignment="Center"/>
                                <TextBlock Text="Bilgisayar Kimliği (HWID):" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Border Grid.Column="1" Background="{DynamicResource MaterialDesignDivider}" 
                                    CornerRadius="4" Margin="12,0" Padding="12,6" VerticalAlignment="Center">
                                <TextBlock Text="{Binding HardwareId}" 
                                           FontFamily="Consolas" 
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Content="KOPYALA" Click="CopyHwid_Click" 
                                    Height="32" Padding="12,0" VerticalAlignment="Center"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Lisans Durumu: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding LicenseStatus}" Foreground="{Binding RemainingTrialDays, Converter={StaticResource DaysToBrushConverter}}"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox materialDesign:HintAssist.Hint="Lisans Anahtarı" 
                                     Text="{Binding LicenseKey}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                            <Button Grid.Column="1" Content="AKTİFLEŞTİR" Command="{Binding ActivateLicenseCommand}" Margin="8,0,0,0"/>
                        </Grid>
                        
                        <TextBlock Text="Full sürüm için yukarıdaki HWID kodunu göndererek lisans anahtarı alabilirsiniz." 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}" 
                                   FontStyle="Italic" Opacity="0.7"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Uygulama Güncelleme Kartı -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp0">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" RenderingBias="Quality" ShadowDepth="1.5" Opacity="0.15"/>
                    </materialDesign:Card.Effect>
                    <StackPanel>
                        <TextBlock Text="Uygulama Güncelleme" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Mevcut Sürüm: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding CurrentVersion}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Durum: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding UpdateStatus}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="GÜNCELLEMELERİ DENETLE" 
                                    Command="{Binding CheckForUpdatesCommand}"
                                    IsEnabled="{Binding IsUpdateChecking, Converter={StaticResource InverseBooleanConverter}}"
                                    Margin="0,0,8,0"/>

                            <Button Content="İNDİR" 
                                    Command="{Binding DownloadUpdateCommand}"
                                    Visibility="{Binding CanDownloadUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Margin="0,0,8,0"/>

                            <Button Content="YÜKLE VE YENİDEN BAŞLAT" 
                                    Command="{Binding ApplyUpdateCommand}"
                                    Visibility="{Binding CanRestartToUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                        
                        <ProgressBar IsIndeterminate="True" 
                                     Margin="0,16,0,0"
                                     Visibility="{Binding IsUpdateChecking, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <ProgressBar IsIndeterminate="True" 
                                     Margin="0,16,0,0"
                                     Visibility="{Binding IsUpdateDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Görünüm Ayarları Kartı -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp0">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" RenderingBias="Quality" ShadowDepth="1.5" Opacity="0.15"/>
                    </materialDesign:Card.Effect>
                    <StackPanel>
                        <TextBlock Text="Görünüm Ayarları" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        <ComboBox materialDesign:HintAssist.Hint="Tema"
                                  ItemsSource="{Binding Themes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  Width="200"
                                  HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Yedekleme Ayarları Kartı -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp0">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" RenderingBias="Quality" ShadowDepth="1.5" Opacity="0.15"/>
                    </materialDesign:Card.Effect>
                    <StackPanel>
                        <TextBlock Text="Yedekleme Ayarları" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox materialDesign:HintAssist.Hint="Yedekleme Klasörü" 
                                     Text="{Binding BackupFolder}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="..." Command="{Binding SelectFolderCommand}" Margin="8,0,0,0"/>
                        </Grid>

                        <ToggleButton Content="Çıkışta otomatik yedekleme yap" 
                                      IsChecked="{Binding AutoBackupOnExit}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      HorizontalAlignment="Left"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Yedekleme Geçmişi Kartı -->
                <materialDesign:Card Padding="16" materialDesign:ElevationAssist.Elevation="Dp0">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" RenderingBias="Quality" ShadowDepth="1.5" Opacity="0.15"/>
                    </materialDesign:Card.Effect>
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Yedekleme Geçmişi" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            <Button Grid.Column="1" Content="ŞİMDİ YEDEKLE" Command="{Binding CreateManualBackupCommand}"/>
                        </Grid>

                        <DataGrid ItemsSource="{Binding BackupHistory}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tarih" Binding="{Binding BackupDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="Auto"/>
                                <DataGridTextColumn Header="Dosya Yolu" Binding="{Binding FilePath}" Width="*"/>
                                <DataGridTemplateColumn Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="GERİ YÜKLE" 
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Command="{Binding DataContext.RestoreBackupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>