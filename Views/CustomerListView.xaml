<UserControl x:Class="IsTakipWpf.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Müşteriler" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

                <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">

                    <StackPanel>

                        <!-- Üst Satır: Ana Aksiyonlar -->

                                        <DockPanel Margin="0,0,0,16">

                                            <Button DockPanel.Dock="Left" 

                                                    Command="{Binding AddCustomerCommand}"

                        

                                    Style="{StaticResource MaterialDesignRaisedButton}"

                                    materialDesign:ButtonAssist.CornerRadius="10"

                                    Height="40">

                                <Button.Content>

                                    <StackPanel Orientation="Horizontal">

                                        <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0" VerticalAlignment="Center"/>

                                        <TextBlock Text="YENİ MÜŞTERİ EKLE" VerticalAlignment="Center"/>

                                    </StackPanel>

                                </Button.Content>

                            </Button>

        

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding ImportExcelCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#1B5E20" BorderBrush="#1B5E20"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        Margin="0,0,8,0">
                                    <Button.ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="Excel'den İçe Aktar"/>
                                            <TextBlock Text="Sütunlar: Ad, Soyad, Telefon, Adres, İl, İlçe"/>
                                            <TextBlock Text="İlk satır başlık olmalıdır." Foreground="Gray" FontSize="10"/>
                                        </StackPanel>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileImport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="EXCEL'DEN İÇE AKTAR" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ExportExcelCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#2E7D32" BorderBrush="#2E7D32"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        Margin="0,0,8,0">
                                    <Button.ToolTip>
                                        <TextBlock Text="Tüm müşteri listesini Excel (.xlsx) olarak dışa aktarır."/>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileExport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="EXCEL DIŞA AKTAR" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ExportPdfCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#B71C1C" BorderBrush="#B71C1C"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        ToolTip="PDF Raporu">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="PDF" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </DockPanel>

        

                        <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="-16,0,-16,16" />

        

                        <!-- Alt Satır: Filtreleme Alanları -->

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>

                                <ColumnDefinition Width="1*"/>

                                <ColumnDefinition Width="1*"/>

                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>

        

                            <TextBox Grid.Column="0" 

                                     materialDesign:HintAssist.Hint="Müşteri Ara (Ad, Soyad, Telefon...)" 

                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"

                                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"

                                     Margin="0,0,16,0"

                                     materialDesign:TextFieldAssist.HasClearButton="True"/>

        

                            <ComboBox Grid.Column="1" 

                                      materialDesign:HintAssist.Hint="İl Seçin"

                                      ItemsSource="{Binding Cities}"

                                      SelectedItem="{Binding SelectedCityFilter}"

                                      DisplayMemberPath="Name"

                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"

                                      Margin="0,0,16,0"

                                      materialDesign:TextFieldAssist.HasClearButton="True"/>

                            

                            <ComboBox Grid.Column="2" 

                                      materialDesign:HintAssist.Hint="İlçe Seçin"

                                      ItemsSource="{Binding Districts}"

                                      SelectedItem="{Binding SelectedDistrictFilter}"

                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"

                                      Margin="0,0,16,0"

                                      materialDesign:TextFieldAssist.HasClearButton="True"/>

        

                            <Button Grid.Column="3" 

                                    Command="{Binding ClearFiltersCommand}"

                                    Style="{StaticResource MaterialDesignFlatButton}"

                                    ToolTip="Filtreleri Temizle">

                                <materialDesign:PackIcon Kind="FilterRemove" />

                            </Button>

                        </Grid>

                    </StackPanel>

                </materialDesign:Card>

        

        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <DataGrid x:Name="CustomersGrid"
                      ItemsSource="{Binding Customers}"
                      SelectedItem="{Binding SelectedCustomer}"
                      PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                      SelectionChanged="DataGrid_SelectionChanged"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="All"
                      IsReadOnly="True"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                      RowDetailsVisibilityMode="VisibleWhenSelected">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="ToolTip" Value="Detayları görmek/kapatmak için tıklayın"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.RowDetailsTemplate>
                    <!-- Mevcut template içeriği aynı kalacak -->
                    <DataTemplate>
                        <Border BorderThickness="0" Background="{DynamicResource MaterialDesignPaper}" Padding="20" Margin="10">
                            <materialDesign:Card UniformCornerRadius="8" Padding="16" materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <TextBlock Text="MÜŞTERİ DETAYLARI" Style="{StaticResource MaterialDesignOverlineTextBlock}" Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                            <TextBlock Text="Tam Adres:" FontWeight="Bold" Margin="0,0,0,4" Opacity="0.7"/>
                                            <TextBlock Text="{Binding Address}" TextWrapping="Wrap" LineHeight="20"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="İletişim Bilgileri:" FontWeight="Bold" Margin="0,0,0,4" Opacity="0.7"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <materialDesign:PackIcon Kind="Phone" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.6"/>
                                                <TextBlock Text="{Binding PhoneNumber, TargetNullValue='Telefon Girilmemiş'}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="MapMarker" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.6"/>
                                                <TextBlock Text="{Binding City}"/>
                                                <TextBlock Text=" / "/>
                                                <TextBlock Text="{Binding District}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

                <DataGrid.Columns>
                    <!-- Yeni Gösterge Sütunu -->
                    <DataGridTemplateColumn Width="35">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon Kind="ChevronRight" Opacity="0.5">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                                    <Setter Property="Kind" Value="ChevronDown"/>
                                                    <Setter Property="Opacity" Value="1"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Ad" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Soyad" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="İl" Binding="{Binding City}" Width="0.8*"/>
                    <DataGridTextColumn Header="İlçe" Binding="{Binding District}" Width="0.8*"/>
                    <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="1.2*"/>
                    <DataGridTemplateColumn Header="İşlemler" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Düzenle"
                                            Height="32" Width="32"
                                            Margin="0,0,4,0">
                                        <materialDesign:PackIcon Kind="Pencil" Height="18" Width="18"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Sil"
                                            Foreground="{DynamicResource ErrorBrush}"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Delete" Height="18" Width="18"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</UserControl>