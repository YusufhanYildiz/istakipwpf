<UserControl x:Class="IsTakipWpf.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Müşteriler" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

                <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">

                    <StackPanel>

                        <!-- Üst Satır: Ana Aksiyonlar -->

                                        <DockPanel Margin="0,0,0,16">

                                            <Button DockPanel.Dock="Left" 

                                                    Command="{Binding AddCustomerCommand}"

                        

                                    Style="{StaticResource MaterialDesignRaisedButton}"

                                    materialDesign:ButtonAssist.CornerRadius="10"

                                    Height="40">

                                <Button.Content>

                                    <StackPanel Orientation="Horizontal">

                                        <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0" VerticalAlignment="Center"/>

                                        <TextBlock Text="YENİ MÜŞTERİ EKLE" VerticalAlignment="Center"/>

                                    </StackPanel>

                                </Button.Content>

                            </Button>

        

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding ImportExcelCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Margin="0,0,8,0">
                                    <Button.ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="Excel'den İçe Aktar"/>
                                            <TextBlock Text="Sütunlar: Ad, Soyad, Telefon, Adres, İl, İlçe"/>
                                            <TextBlock Text="İlk satır başlık olmalıdır." Foreground="Gray" FontSize="10"/>
                                        </StackPanel>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileImport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="EXCEL'DEN İÇE AKTAR" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ExportExcelCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Margin="0,0,8,0">
                                    <Button.ToolTip>
                                        <TextBlock Text="Tüm müşteri listesini Excel (.xlsx) olarak dışa aktarır."/>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileExport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="EXCEL" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ExportPdfCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        ToolTip="PDF Raporu">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="PDF" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </DockPanel>

        

                        <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="-16,0,-16,16" />

        

                        <!-- Alt Satır: Filtreleme Alanları -->

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>

                                <ColumnDefinition Width="1*"/>

                                <ColumnDefinition Width="1*"/>

                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>

        

                            <TextBox Grid.Column="0" 

                                     materialDesign:HintAssist.Hint="Müşteri Ara (Ad, Soyad, Telefon...)" 

                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"

                                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"

                                     Margin="0,0,16,0"

                                     materialDesign:TextFieldAssist.HasClearButton="True"/>

        

                            <ComboBox Grid.Column="1" 

                                      materialDesign:HintAssist.Hint="İl Seçin"

                                      ItemsSource="{Binding Cities}"

                                      SelectedItem="{Binding SelectedCityFilter}"

                                      DisplayMemberPath="Name"

                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"

                                      Margin="0,0,16,0"

                                      materialDesign:TextFieldAssist.HasClearButton="True"/>

                            

                            <ComboBox Grid.Column="2" 

                                      materialDesign:HintAssist.Hint="İlçe Seçin"

                                      ItemsSource="{Binding Districts}"

                                      SelectedItem="{Binding SelectedDistrictFilter}"

                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"

                                      Margin="0,0,16,0"

                                      materialDesign:TextFieldAssist.HasClearButton="True"/>

        

                            <Button Grid.Column="3" 

                                    Command="{Binding ClearFiltersCommand}"

                                    Style="{StaticResource MaterialDesignFlatButton}"

                                    ToolTip="Filtreleri Temizle">

                                <materialDesign:PackIcon Kind="FilterRemove" />

                            </Button>

                        </Grid>

                    </StackPanel>

                </materialDesign:Card>

        

        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <DataGrid ItemsSource="{Binding Customers}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="All"
                      IsReadOnly="True"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ad" Binding="{Binding FirstName}" Width="Auto"/>
                    <DataGridTextColumn Header="Soyad" Binding="{Binding LastName}" Width="Auto"/>
                    <DataGridTextColumn Header="İl" Binding="{Binding City}" Width="Auto"/>
                    <DataGridTextColumn Header="İlçe" Binding="{Binding District}" Width="Auto"/>
                    <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="Auto"/>
                    <DataGridTextColumn Header="Adres" Binding="{Binding Address}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="MaxHeight" Value="40"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="İşlemler" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Düzenle"
                                            Height="32" Width="32"
                                            Margin="0,0,4,0">
                                        <materialDesign:PackIcon Kind="Pencil" Height="18" Width="18"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Sil"
                                            Foreground="{DynamicResource ErrorBrush}"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Delete" Height="18" Width="18"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</UserControl>