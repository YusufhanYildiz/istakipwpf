<UserControl x:Class="IsTakipWpf.Views.JobListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="İş Takibi" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <StackPanel>
                <!-- Finansal Özet -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Margin="0,0,8,0" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp3">
                        <Border CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A237E" Offset="0.0"/>
                                    <GradientStop Color="#3949AB" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Margin="16">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <materialDesign:PackIcon Kind="Finance" Foreground="White" Opacity="0.9" Width="24" Height="24" Margin="0,0,8,0"/>
                                    <TextBlock Text="TOPLAM KALAN BAKİYE" Foreground="White" Opacity="0.9" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding TotalBalance, StringFormat=C2, TargetNullValue=0 ₺}" Foreground="White" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Margin="8,0,0,0" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp3">
                        <Border CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#004D40" Offset="0.0"/>
                                    <GradientStop Color="#00897B" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Margin="16">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <materialDesign:PackIcon Kind="HandCoin" Foreground="White" Opacity="0.9" Width="24" Height="24" Margin="0,0,8,0"/>
                                    <TextBlock Text="SEÇİLİ İŞİN KALAN BAKİYESİ" Foreground="White" Opacity="0.9" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding SelectedJobBalance, StringFormat=C2, TargetNullValue=0 ₺}" Foreground="White" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </materialDesign:Card>
                </Grid>

                <!-- Üst Satır: Ana Aksiyonlar -->
                <DockPanel Margin="0,0,0,16">
                    <Button DockPanel.Dock="Left" 
                            Command="{Binding AddJobCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Height="40">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="BriefcasePlus" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="YENİ İŞ EKLE" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding ImportExcelCommand}" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#1B5E20" BorderBrush="#1B5E20"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Margin="0,0,8,0">
                            <Button.ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="Excel'den İçe Aktar"/>
                                    <TextBlock Text="Sütunlar: Müşteri Adı, İş Başlığı, Açıklama, Başlangıç, Bitiş, İş Tutarı, Alınan Ödeme"/>
                                    <TextBlock Text="İlk satır başlık olmalıdır." Foreground="Gray" FontSize="10"/>
                                </StackPanel>
                            </Button.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileImport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="EXCEL'DEN İÇE AKTAR" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportExcelCommand}" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#2E7D32" BorderBrush="#2E7D32"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Margin="0,0,8,0"
                                ToolTip="İş Listesi Excel">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="EXCEL DIŞA AKTAR" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportPdfCommand}" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#B71C1C" BorderBrush="#B71C1C"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                ToolTip="İş Listesi PDF">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="PDF" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="-16,0,-16,16" />

                <!-- Alt Satır: Gelişmiş Filtreleme -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             materialDesign:HintAssist.Hint="İş Başlığı veya Açıklama Ara..." 
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,12,0"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="1" 
                              materialDesign:HintAssist.Hint="Müşteri Seçin"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="FullName"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="2" 
                              materialDesign:HintAssist.Hint="İl"
                              ItemsSource="{Binding Cities}"
                              SelectedItem="{Binding SelectedCityFilter}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="3" 
                              materialDesign:HintAssist.Hint="İlçe"
                              ItemsSource="{Binding Districts}"
                              SelectedItem="{Binding SelectedDistrictFilter}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="4" 
                              materialDesign:HintAssist.Hint="Durum"
                              ItemsSource="{Binding Statuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <Button Grid.Column="5" 
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Filtreleri Temizle">
                        <materialDesign:PackIcon Kind="FilterRemove" />
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <DataGrid x:Name="JobsGrid"
                      ItemsSource="{Binding Jobs}"
                      SelectedItem="{Binding SelectedJob}"
                      PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                      SelectionChanged="DataGrid_SelectionChanged"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="All"
                      IsReadOnly="True"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                      RowDetailsVisibilityMode="VisibleWhenSelected">
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="ToolTip" Value="Detayları görmek/kapatmak için tıklayın"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.RowDetailsTemplate>
                    <!-- Mevcut template içeriği aynı kalacak -->
                    <DataTemplate>
                        <Border BorderThickness="0" Background="{DynamicResource MaterialDesignPaper}" Padding="20" Margin="10">
                            <materialDesign:Card UniformCornerRadius="8" Padding="16" materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <TextBlock Text="İŞ DETAYLARI" Style="{StaticResource MaterialDesignOverlineTextBlock}" Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                            <TextBlock Text="Açıklama:" FontWeight="Bold" Margin="0,0,0,4" Opacity="0.7"/>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" LineHeight="20"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Zaman Çizelgesi:" FontWeight="Bold" Margin="0,0,0,4" Opacity="0.7"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <materialDesign:PackIcon Kind="CalendarStart" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.6"/>
                                                <TextBlock Text="{Binding StartDate, StringFormat='Başlangıç: {0:dd MMMM yyyy}', TargetNullValue='-'}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="CalendarEnd" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.6"/>
                                                <TextBlock Text="{Binding EndDate, StringFormat='Bitiş: {0:dd MMMM yyyy}', TargetNullValue='-'}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

                <DataGrid.Columns>
                    <!-- Yeni Gösterge Sütunu -->
                    <DataGridTemplateColumn Width="35">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon Kind="ChevronRight" Opacity="0.5">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                                    <Setter Property="Kind" Value="ChevronDown"/>
                                                    <Setter Property="Opacity" Value="1"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Müşteri" Binding="{Binding CustomerFullName}" Width="*"/>
                    <DataGridTextColumn Header="Konum" Binding="{Binding CustomerLocation}" Width="0.8*"/>
                    <DataGridTemplateColumn Header="Durum" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,2" CornerRadius="4" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Bekliyor">
                                                    <Setter Property="Background" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="DevamEdiyor">
                                                    <Setter Property="Background" Value="LightBlue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Tamamlandi">
                                                    <Setter Property="Background" Value="LightGreen"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status, Converter={StaticResource EnumToDescriptionConverter}}" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="İş Başlığı" Binding="{Binding JobTitle}" Width="1.2*"/>
                    
                    <!-- Finansal Sütunlar -->
                    <DataGridTextColumn Header="İş Tutarı" Binding="{Binding Price, StringFormat=C2}" Width="Auto" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Alınan Ödeme" Binding="{Binding PaidAmount, StringFormat=C2}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Kalan Bakiye" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Balance, StringFormat=C2}" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <!-- Sıfır (Tam Ödeme) -> Yeşil -->
                                                <DataTrigger Binding="{Binding Balance}" Value="0">
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <!-- Eksi (Borçlu) -> Kırmızı -->
                                                <DataTrigger Binding="{Binding Balance, Converter={StaticResource LessThanZeroConverter}}" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="İşlemler" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.EditJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Düzenle"
                                            Height="32" Width="32"
                                            Margin="0,0,4,0">
                                        <materialDesign:PackIcon Kind="Pencil" Height="18" Width="18"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.DeleteJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Sil"
                                            Foreground="{DynamicResource ErrorBrush}"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Delete" Height="18" Width="18"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</UserControl>