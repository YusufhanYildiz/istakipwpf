<UserControl x:Class="IsTakipWpf.Views.JobListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="İş Takibi" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,20"/>

        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <StackPanel>
                <!-- Üst Satır: Ana Aksiyonlar -->
                <DockPanel Margin="0,0,0,16">
                    <Button DockPanel.Dock="Left" 
                            Command="{Binding AddJobCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Height="40">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="BriefcasePlus" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="YENİ İŞ EKLE" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding ImportExcelCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Margin="0,0,8,0"
                                ToolTip="İşleri Excel'den Aktar">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileImport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="İÇE AKTAR" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportExcelCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Margin="0,0,8,0"
                                ToolTip="İş Listesi Excel">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExport" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="EXCEL" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportPdfCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                ToolTip="İş Listesi PDF">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="PDF" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="-16,0,-16,16" />

                <!-- Alt Satır: Gelişmiş Filtreleme -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             materialDesign:HintAssist.Hint="İş Başlığı veya Açıklama Ara..." 
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,12,0"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="1" 
                              materialDesign:HintAssist.Hint="Müşteri Seçin"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="FullName"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="2" 
                              materialDesign:HintAssist.Hint="İl"
                              ItemsSource="{Binding Cities}"
                              SelectedItem="{Binding SelectedCityFilter}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="3" 
                              materialDesign:HintAssist.Hint="İlçe"
                              ItemsSource="{Binding Districts}"
                              SelectedItem="{Binding SelectedDistrictFilter}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <ComboBox Grid.Column="4" 
                              materialDesign:HintAssist.Hint="Durum"
                              ItemsSource="{Binding Statuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,0,12,0"
                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <Button Grid.Column="5" 
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Filtreleri Temizle">
                        <materialDesign:PackIcon Kind="FilterRemove" />
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <DataGrid ItemsSource="{Binding Jobs}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="All"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Müşteri" Binding="{Binding CustomerFullName}" Width="Auto"/>
                    <DataGridTextColumn Header="İl" Binding="{Binding CustomerCity}" Width="Auto"/>
                    <DataGridTextColumn Header="İlçe" Binding="{Binding CustomerDistrict}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Durum" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,2" CornerRadius="4" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Bekliyor">
                                                    <Setter Property="Background" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="DevamEdiyor">
                                                    <Setter Property="Background" Value="LightBlue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Tamamlandi">
                                                    <Setter Property="Background" Value="LightGreen"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status, Converter={StaticResource EnumToDescriptionConverter}}" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="İş Başlığı" Binding="{Binding JobTitle}" Width="Auto"/>
                    <DataGridTextColumn Header="Açıklama" Binding="{Binding Description}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="MaxHeight" Value="40"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Başlangıç" Binding="{Binding StartDate, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                    <DataGridTextColumn Header="Bitiş" Binding="{Binding EndDate, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                    <DataGridTemplateColumn Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.EditJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Düzenle"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Pencil" Height="16" Width="16"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding DataContext.DeleteJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Sil"
                                            Foreground="{DynamicResource ErrorBrush}"
                                            Height="32" Width="32">
                                        <materialDesign:PackIcon Kind="Delete" Height="16" Width="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</UserControl>