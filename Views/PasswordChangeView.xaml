<UserControl x:Class="IsTakipWpf.Views.PasswordChangeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:infra="clr-namespace:IsTakipWpf.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <infra:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <infra:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="16">
        <StackPanel MaxWidth="500" HorizontalAlignment="Left">
            <TextBlock Text="Güvenlik ve Şifre Yönetimi" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,24"/>

            <materialDesign:Card Padding="24" materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="Şifre Değiştir" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20"/>

                    <PasswordBox x:Name="CurrentPasswordBox"
                                materialDesign:HintAssist.Hint="Mevcut Şifre"
                                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                Margin="0,0,0,15"
                                PasswordChanged="CurrentPasswordBox_PasswordChanged"/>

                    <PasswordBox x:Name="NewPasswordBox"
                                materialDesign:HintAssist.Hint="Yeni Şifre"
                                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                Margin="0,0,0,15"
                                PasswordChanged="NewPasswordBox_PasswordChanged"/>

                    <PasswordBox x:Name="ConfirmPasswordBox"
                                materialDesign:HintAssist.Hint="Yeni Şifre (Tekrar)"
                                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                Margin="0,0,0,20"
                                PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,15"/>

                    <materialDesign:ColorZone Mode="PrimaryLight" Padding="12" CornerRadius="4" 
                                              Visibility="{Binding IsSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"
                                              Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Şifre başarıyla güncellendi." VerticalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <Button Content="ŞİFREYİ GÜNCELLE"
                            Command="{Binding ChangePasswordCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Height="45"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</UserControl>
